<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="android:statusBarColor">@color/app_bg</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/app_bg</item>

        <item name="android:datePickerDialogTheme">@style/datePickerTheme</item>
        <item name="android:timePickerDialogTheme">@style/timePickerTheme</item>
    </style>

    <style name="datePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- <item name="android:" -->
        <item name="colorAccent">#072AD8</item>
        <item name="colorControlActivated">#FF5D0B</item>
        <item name="colorControlHighlight">#EAF3FF</item>
    </style>

    <style name="timePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- <item name="android:" -->
        <item name="colorAccent">#072AD8</item>
        <item name="android:textColorPrimary">#072AD8</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
      <item name="android:statusBarColor">@color/splashscreen_bg</item>
      <item name="android:background">@drawable/background_splash</item>
    </style>

</resources>
