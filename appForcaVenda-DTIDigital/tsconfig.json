{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2017"],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": false,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@features/*": ["src/features/*"],
      "@layout/*": ["src/layout/*"],
      "@mocks/*": ["src/mocks/*"],
      "@shared/*": ["src/shared/*"],
      "@utils/*": ["src/utils/*"],
    },
    "typeRoots": ["src/shared/types/@types", "node_modules", "node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "experimentalDecorators": true,
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"],
  "types": ["styled-components-react-native"],
}
